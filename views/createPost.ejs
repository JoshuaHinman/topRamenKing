                <label for="subtitle">Subtitle</label><br>
                <input type="text" name="subtitle" size="80" autocomplete="off"><br>
                <label for="text">Text</label><br>
                <textarea name="text" rows="4" cols="90" autocomplete="off"></textarea><br>
                <label for="rating">Rating </label>
                <%- include('layouts/ratingControl')  -%>
            </fieldset>
        </form>
