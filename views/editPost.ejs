            <div id="cropped-frame">
                <canvas id="cropped-canvas"></canvas>
            </div>
            <div>
                <input type="submit" id="submitPost" value="DONE" >
            </div>
        </div>
        <div id="photo-frame">
            <!-- <canvas id="photo-canvas" width="1000" height ="1000"></canvas> -->
