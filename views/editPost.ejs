<body style="background-color: whitesmoke;">
    <%- include('layouts/header')-%>
    <main>
    <div id="post-layout">
        <form action="reviews/create" method="post" encType="multipart/form-data" id="post-form-data" style="position:relative">
            <fieldset>
                <h3>Edit A Review</h3>
                <label for="title">Title</label><br>
                <input type="text" name="title" size="80" autocomplete="off"><br>
                <label for="subtitle">Subtitle</label><br>
                <input type="text" name="subtitle" size="80" autocomplete="off"><br>
                <label for="text">Text</label><br>
                <textarea name="text" rows="4" cols="90" autocomplete="off"></textarea><br>
                <label for="rating">Rating </label>
                <%- include('layouts/ratingControl')  -%>
            </fieldset>
        </form>
        <div></div><br>
        <div id="photo-controls">
            <label for="photo" class="large-button">Add Photo...</label>
            <input type="file" id="photo" name="photo" style="visibility: hidden;">
            <!-- <span style="font-size: xx-large;">ðŸ — Drag frame corners to crop image ðŸ —</span> -->
            <span style="font-size: xx-large;">Image will crop to square shape</span>
